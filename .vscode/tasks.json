{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build and run cpp file (with python extention)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-DFRAGA",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/etc/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
