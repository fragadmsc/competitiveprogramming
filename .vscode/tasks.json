{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build, Expand, and Run",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-DFRAGA",
                "-g",
                "-I${workspaceFolder}",
                "${file}",
                "-o",
                "${fileDirname}/etc/${fileBasenameNoExtension}",
                "&&",
                "python3",
                "${workspaceFolder}/expander.py",
                "${file}",
                "&&",
                "${fileDirname}/etc/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiles, generates _submit.cpp, and executes in terminal."
        },
        {
            "label": "Build and Expand (Debug Only)",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-DFRAGA",
                "-g",
                "-I${workspaceFolder}",
                "${file}",
                "-o",
                "${fileDirname}/etc/${fileBasenameNoExtension}",
                "&&",
                "python3",
                "${workspaceFolder}/expander.py",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Compiles and generates _submit.cpp. Used by launch.json."
        }
    ]
}